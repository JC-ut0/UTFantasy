<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="233dp"
        android:layout_height="332dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/money"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_alignEnd="@+id/gender"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:textColor="@color/DarkGreen"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilename"
        android:layout_alignStart="@+id/profilename"
        android:layout_alignEnd="@+id/profilename"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/DarkGreen"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileimage"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profileimage"
        android:textColor="@color/DarkGreen"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"
        android:layout_alignStart="@+id/money"
        android:layout_alignEnd="@+id/money"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:textColor="@color/DarkGreen"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/back_to_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/return_button" />

    <CheckBox
        android:id="@+id/showingScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="5dp"
        android:buttonTint="@android:color/primary_text_dark_nodisable"
        android:onClick="changeShowingScore"
        android:text="@string/showingScore" />

    <TextView
        android:id="@+id/percentile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showingScore"
        android:layout_alignStart="@+id/showingScore"
        android:layout_marginTop="5dp"
        android:text="@string/percentile"
        android:textColor="#FFFFFF"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/pokemonNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentile"
        android:layout_alignStart="@+id/percentile"
        android:layout_marginTop="5dp"
        android:text="@string/num"
        android:textColor="#FFFFFF"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/pokemonLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemonNum"
        android:layout_alignStart="@+id/percentile"
        android:layout_marginTop="5dp"
        android:text="@string/pokemonlv"
        android:textColor="#FFFFFF"
        android:textStyle="bold">

    </TextView>


</RelativeLayout>