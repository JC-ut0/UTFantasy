<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ListView
        android:id="@+id/productListView"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="483dp"
        android:layout_marginBottom="97dp" />


    <ImageButton
        android:id="@+id/back_to_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/return_button" />

    <LinearLayout
        android:id="@+id/left_top"
        android:layout_width="202dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="161dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="description"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_top"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="164dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/add1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="35dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="30dp"
            android:enabled="false"
            android:text="Add 1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/add10"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="35dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="31dp"
            android:enabled="false"
            android:text="Add 10"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/enter_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autofillHints=""
            android:hint="Enter amount"
            android:inputType="number" />

        <Button
            android:id="@+id/apply"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:text="Apply"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_bottom"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="43dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/left_bottom1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="236dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productOwed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number in bag:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/amountInBag"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_bottom2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount_selected"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Amount selected:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/num_selected"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bottom"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/right_top"
        android:layout_alignBottom="@+id/left_bottom"
        android:layout_marginEnd="-7dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/right_bottom1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moneyLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Money in bag:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/money_left"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_bottom2"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Total selected:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/totalMoney"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="466dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/my_bag"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/text_box"
            android:text="My Bag"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buy"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/text_box"
            android:enabled="false"
            android:text="BUY!"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>
