<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubackground">


    <ImageView
        android:id="@+id/image_pink"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/image_red"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="41dp"
        android:layout_toStartOf="@+id/image_red"
        android:contentDescription="@string/pink_potion"
        android:src="@drawable/pink" />

    <TextView
        android:id="@+id/price_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_pink"
        android:layout_alignEnd="@+id/image_pink"
        android:layout_marginStart="1dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="150dp"
        android:gravity="bottom"
        android:text="@string/_300"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/image_red"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/image_purple"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="49dp"
        android:layout_toStartOf="@+id/image_purple"
        android:contentDescription="@string/red_potion"
        android:src="@drawable/red" />

    <TextView
        android:id="@+id/price_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_red"
        android:layout_alignEnd="@+id/image_red"
        android:layout_marginStart="1dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="152dp"
        android:gravity="bottom"
        android:text="@string/_200"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/image_purple"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="143dp"
        android:contentDescription="@string/purple_potion"
        android:src="@drawable/purple" />

    <TextView
        android:id="@+id/price_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/image_purple"
        android:layout_alignTop="@+id/image_purple"
        android:layout_alignEnd="@+id/image_purple"
        android:layout_alignBottom="@+id/image_purple"
        android:layout_margin="1dp"
        android:gravity="bottom"
        android:text="@string/_100"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/back_to_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/return_button"
        android:contentDescription="@string/back" />


    <Button
        android:id="@+id/choose_pink"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/choose_red"
        android:layout_alignEnd="@+id/image_pink"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-5dp"
        android:text="@string/hyper_potion">

    </Button>

    <Button
        android:id="@+id/choose_red"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/choose_purple"
        android:layout_alignEnd="@+id/image_red"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:text="@string/super_potion" />

    <Button
        android:id="@+id/choose_purple"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/image_purple"
        android:layout_alignEnd="@+id/image_purple"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="6dp"
        android:text="@string/potion" />

    <TextView
        android:id="@+id/money_left"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="618dp"
        android:layout_marginBottom="19dp"
        android:text="@string/money_left"
        android:textColor="#FF6347"
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/money_left"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="594dp"
        android:layout_marginBottom="22dp"
        android:text="@string/_0"
        android:textColor="#FAEBD7"
        android:textSize="16sp" />

    <Button
        android:id="@+id/my_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_red"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="13dp"
        android:layout_toStartOf="@+id/back_to_main"
        android:text="@string/my_bag" />


</RelativeLayout>
