<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_background">

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="233dp"
        android:layout_height="332dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/money"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_alignEnd="@+id/gender"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:textSize="25sp"
        android:textColor="@color/DarkGreen"
        />

    <TextView
        android:id="@+id/gender"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilename"
        android:layout_alignStart="@+id/profilename"
        android:layout_alignEnd="@+id/profilename"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:textSize="25sp"
        android:textColor="@color/DarkGreen"
        />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileimage"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profileimage"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"
        android:layout_alignStart="@+id/money"
        android:layout_alignEnd="@+id/money"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:textSize="25sp"
        android:textColor="@color/DarkGreen"
        />
</RelativeLayout>